<?xml version='1.0' encoding='UTF-8'?>
<interface>
    <requires lib="Adw" version="1.0" />
    <requires lib="gtk" version="4.0" />
    <requires lib="libadwaita" version="1.7" />

    <object class="AdwApplicationWindow" id="main_window">

        <child>
            <object class="GtkBox">
                <property name="orientation">horizontal</property>
                <property name="hexpand">True</property>
                <property name="vexpand">True</property>

                <!-- Main Carousel -->
                <child>
                    <object class="AdwCarousel" id="carousel">
                        <property name="hexpand">True</property>
                        <property name="vexpand">True</property>
                        <property name="allow-mouse-drag">True</property>
                        <property name="interactive">True</property>
                        <property name="orientation">horizontal</property>

                        <!-- Page 1 -->
                        <child>
                            <object class="AdwStatusPage">
                                <property name="title">Page 1</property>
                                <property name="hexpand">True</property>
                                <property name="vexpand">True</property>
                            </object>
                        </child>

                        <!-- Page 2 -->
                        <child>
                            <object class="AdwStatusPage">
                                <property name="title">Page 2</property>
                                <property name="hexpand">True</property>
                                <property name="vexpand">True</property>
                            </object>
                        </child>

                        <!-- Page 3 -->
                        <child>
                            <object class="AdwStatusPage">
                                <property name="title">Page 3</property>
                                <property name="hexpand">True</property>
                                <property name="vexpand">True</property>
                            </object>
                        </child>
                    </object>
                </child>

                <!-- Indicator -->
                <child>
                    <object class="AdwCarouselIndicatorLines">
                        <property name="orientation">vertical</property>
                        <property name="carousel">carousel</property>
                        <property name="margin-top">12</property>
                        <property name="margin-bottom">12</property>
                    </object>
                </child>
            </object>
        </child>
    </object>
</interface>